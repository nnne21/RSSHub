{
  "version": 2,
  "builds": [
    {
      "src": "api/vercel.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/api/vercel.js" }
  ],
  "buildCommand": "npm install && npm run build",
  "env": {
    "CACHE_TYPE": "memory",
    "ALLOW_USER_HOTLINK": "true"
  }
}
