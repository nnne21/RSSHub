{
  "version": 2,
  "builds": [
    {
      "src": "api/vercel.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/api/vercel.ts" }
  ],
  "installCommand": "pnpm install --no-frozen-lockfile",
  "buildCommand": "pnpm build",
  "env": {
    "CACHE_TYPE": "memory",
    "ALLOW_USER_HOTLINK": "true"
  }
}
